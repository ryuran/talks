table
  margin: auto
  border-collapse: collapse
  border-spacing: 0

  th,
  td
    text-align: left
    padding: 0.2em 0.5em 0.2em 0.5em
    border-bottom: 1px solid

    [align="center"]
      text-align: center

    [align="right"]
      text-align: right

  tbody tr:last-child
    th,
    td
      border-bottom: none
