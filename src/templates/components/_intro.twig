<div class="title">
  <h1>{{ title }}</h1>
  {% if subtitle %}
    <p class="subtitle">{{ subtitle }}</p>
  {% endif %}
  {% if dates %}
    {% for event in dates %}
      {% if event.date|isToday %}
        <div class="date">{{ event.name }} Â· {{ event.date|date('MMM D, YYYY', lang) }}</div>
      {% endif %}
    {% endfor %}
  {% endif %}

  <a href="https://twitter.com/{{ speaker.twitterName }}">@{{ speaker.twitterName }}</a>
</div>
