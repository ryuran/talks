@import '../font-face/zero-zero-is'

.reveal .slides section

  // Overwrite to replace
  .fragment.fade-over
    show()
    position: relative

    span
      display: block
      position: absolute
      top: 0
      width: 100%
      transition-all()

      &:first-child
        show()

      &:last-child
        hide()

    &.visible span
      &:first-child
        hide()

      &:last-child
        show()

  // Stamp
  .fragment.stamp
    z-index: 1
    position: absolute
    top: 50%
    left: 50%
    margin: 0

    font-family: 'Zero & Zero Is'
    font-size: xxx-large
    text-transform: uppercase
    letter-spacing: .28em
    color: color-alert

    background-color: alpha(background-color, .2)
    text-shadow: 10px 8px 0px alpha(background-color, .8)

    transform: rotate(-37deg) scale(1.3)
    transition-timing-function: cubic-bezier(0.175, 0.885, 0.32, 1.275)

    &.visible
      show()
      transform: rotate(-37deg) scale(1)

  // Accordion
  .accordion
    .fragment.fade-out
      max-height: 100%

      &.visible
        max-height: 0
        transform: translateY(-50%)

  // Typewriter
  .fragment.typewriter
    //

  // Highlight
  .fragment.stabilo
    show()
    stabilo()

    &::before
    &::after
      width: 0
      transition: width 350ms cubic-bezier(0.075, 0.82, 0.165, 1)

    &::after
      transition-delay: 250ms

    &.visible
      &::before
      &::after
        width: 105%
