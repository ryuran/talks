.reveal .cover

  full-bleed()

  .company
    position: absolute
    top: 0
    right: 0

    img
      width: 8rem
      opacity: .2

  .title
    position: absolute
    bottom: 18%
    width: 100%

    margin: 0 auto
    display: flex
    flex-wrap: wrap-reverse
    align-items: baseline

    text-align: left

    h1
      top-separator()
      margin: -1em 0 margin
      font-family: cover-font-family
      flex: 1 0 100%

  .subtitle
    flex: 1 0
    padding-bottom: .2em
    font-size: large
    font-weight: normal

  .date
    font-size: x-small
    text-align: right
    flex: 0 1
    white-space: nowrap

    &::after
      content: '|'
      padding: 0 .28em

  .speaker
    font-size: x-small

  .permalink
    position: absolute
    bottom: 3em
    left: 0
    display: flex
    align-items: center
    font-size: x-small

    icon(right)

[lang=en]
  .subtitle
    text-transform: capitalize
