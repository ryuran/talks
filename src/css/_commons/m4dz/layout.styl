.reveal section:not(.thanks)
  h3
  h4
    position: absolute
    top: 50%
    left: 0
    transform: translate(0, -1px * (720px / 2) + x-small + 1.3 * margin)

  h3
  h4
    & + p
    & + ul
    & + ol
    & + figure
    & + pre
      margin-top: h3-margin
      margin-bottom: h3-margin

  ul
  ol
    .x-small
      display: block

  .left
    padding: 0 margin
    text-align: left

  .reset
    margin: margin auto

  // FIXME: Don't rely on it to handle layout stuff
  .typewriter
    display: block

.reveal section
  [class^=cols]
    display: flex

  .cols-2 >
    div
    p
    ul
    ol
    figure
    pre
      flex 1 50%
