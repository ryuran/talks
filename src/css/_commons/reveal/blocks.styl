.slides section,
.slides section > section
  line-height: 1.3
  font-weight: inherit

p
  margin: margin 0
  line-height: 1.3

blockquote
  display: block
  width: 70%
  margin: margin auto
  padding: 5px

pre
  width: 95%
  margin: margin auto
  box-sizing: border-box

  font-size: code-font-size
  font-family: code-font-family

code
  font-family: code-font-family
  text-transform: none

pre code
  display: block
  max-height: 400px

/* see also `link.styl` about media styles in links */
section img
  margin: 15px 0px
  border: 4px solid color

  box-shadow: 0 0 10px rgba(0, 0, 0, 0.15)

  &.plain
    border: 0
    box-shadow: none

/* Ensure certain elements are never larger than the slide itself */
img,
video,
iframe
  max-width: 95%
  max-height: 95%
