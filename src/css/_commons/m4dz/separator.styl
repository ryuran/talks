$separator
  display: inline-flex
  align-items: center
  max-width: 100%

  icon(colon)

  &::before
  &::after
    content: ''
    opacity: .25

  &::before
    order: -2

  &::after
    order: -1
    flex: 1
    border-bottom: 2px solid color


top-separator(ratio = 3em)
  @extend $separator

  flex-wrap: wrap

  &::before
  &::after
    position: relative
    top: 15px * ratio

  &::before
    transform: translate(-16.667px * ratio, 3.333px * ratio)
    width: font-size * ratio
    height: font-size * ratio

  &::after
    margin-left: -30px * ratio
    flex-basis: 95%

bottom-separator()
  @extend $separator

right-separator()
  @extend $separator

  &::before
  &::after
    position: relative

  &::before
    order: 1
    top: 3px

  &::after
    order: 2
    top: 2px
    margin-left: -.5em
